<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Light Controls"
        android:id="@+id/textView"
        android:layout_marginTop="10dp"
        android:textColor="#000000" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:id="@+id/imageView3"

        android:src="@drawable/switchon"
        android:layout_marginTop="10dp" />

    <Switch
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Light Status/Manual Override"
        android:id="@+id/switch1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:layout_marginTop="25dp"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="This feature lets the user to turn the light on/off by the user choice. This is a manual feature to turn the ligts on and off"
        android:id="@+id/textView4"
        android:textSize="16dp"
        android:layout_marginBottom="0dp"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:layout_weight="0.51" />
</LinearLayout>