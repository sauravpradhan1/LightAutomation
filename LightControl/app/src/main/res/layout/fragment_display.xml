<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lightcontrol.FragmentDisplay">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="267dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/imageView2"
        android:src="@drawable/home"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Automate the light.Make your house appear occupied while you are away. Automate your lighting to respond to your schedule without any touch at all.  "
        android:id="@+id/textView5"
        android:layout_gravity="center"
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_marginTop="100dp" />


</FrameLayout>
