<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="PIR Control"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:id="@+id/imageView4"
        android:src="@drawable/motionlight"
        android:layout_marginTop="10dp" />

    <Switch
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="PIR Sensor"
        android:id="@+id/switch2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:layout_marginTop="10dp"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="In this feature, the user is able to turn on and off the motion sensor.When the user turns on the motion, the light is turned on when the motion is detected. It is suitable for the places like passage, garage , stairs.It can also be used as bugler detection"
        android:id="@+id/textView6"
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:height="200dp"/>
</LinearLayout>